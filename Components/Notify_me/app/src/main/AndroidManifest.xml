<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.venussteve.notify_me">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".notify_me">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Repeating_activity"/>
        <receiver android:name=".Notification_receiver"/>
        <activity android:name=".notify_me_snack1"/>
        <activity android:name=".Repeating_activity_snack1"/>
        <receiver android:name=".Notification_receiver_snack1"/>
        <activity android:name=".notify_me_lunch"/>
        <activity android:name=".Repeating_activity_lunch"/>
        <receiver android:name=".Notification_receiver_lunch"/>
        <activity android:name=".notify_me_snack2"/>
        <activity android:name=".Repeating_activity_snack2"/>
        <receiver android:name=".Notification_receiver_snack2"/>
        <activity android:name=".notify_me_dinner"/>
        <activity android:name=".Repeating_activity_dinner"/>
        <receiver android:name=".Notification_receiver_dinner"/>

    </application>

</manifest>