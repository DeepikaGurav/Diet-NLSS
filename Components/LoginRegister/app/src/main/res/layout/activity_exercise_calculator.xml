<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nickydcruz.loginregister.ExerciseCalculator">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#424242" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#424242"
        android:fontFamily="cursive"
        android:textSize="18sp" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="10dp"
        android:fontFamily="cursive" />

    <TextView
        android:text="MET value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:textColor="#424242"
        android:textSize="18sp"
        android:fontFamily="cursive" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter value given next to your activity"
        android:fontFamily="sans-serif-condensed"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:text="Activity Duration[mins] "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#424242"
        android:fontFamily="cursive"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/button"
        android:hint="0"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView3"
        android:hint="0"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:text="Weight [kg]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/button"
        android:textColor="#424242"
        android:fontFamily="cursive"
        android:textSize="18sp" />

    <TextView
        android:text="Calories burnt/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textColor="#424242"
        android:fontFamily="cursive"
        android:textSize="18sp" />

    <TextView
        android:text="Total calories burnt "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="26dp"
        android:textColor="#424242"
        android:fontFamily="cursive"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:id="@+id/editText4"
        android:hint="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:hint="0.0" />

</RelativeLayout>
