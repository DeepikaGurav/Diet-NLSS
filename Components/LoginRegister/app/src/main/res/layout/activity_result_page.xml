<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@style/Theme"
>
<RelativeLayout
    android:id="@+id/activity_result_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.example.nickydcruz.loginregister.ResultPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/tvCategory"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCategory"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:id="@+id/tvBmr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBmr"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/tvBmr"
        android:id="@+id/tvIdealweiht" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIdealweiht"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:id="@+id/tvExpertsMessage" />

    <Button
        android:text="Loose Weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvExpertsMessage"
        android:id="@+id/btLW"
        android:visibility="gone"
        android:clickable="false" />

    <Button
        android:text="Maintain Weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btMW"
        android:visibility="gone"
        android:clickable="false"
        android:layout_below="@+id/btLW" />

    <Button
        android:text="Gain Weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btGW"
        android:layout_below="@+id/btMW"
        android:visibility="gone"
        android:clickable="false" />

    <Button
        android:text="Custom diet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btcustD"
        android:layout_below="@+id/btGW"
         />

    <Button
        android:text="Graph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/graph"
        android:layout_below="@+id/btcustD"
        />


</RelativeLayout>
</ScrollView>