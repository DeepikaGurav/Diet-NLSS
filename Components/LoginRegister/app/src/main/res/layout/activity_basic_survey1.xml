<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_survey1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nickydcruz.loginregister.BasicSurvey1">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spScale"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/tvHeight"
        android:layout_alignBottom="@+id/editText8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="Please enter your weight"
        android:textStyle="bold"
        android:textSize="38px"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:maxWidth="25dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etWeight"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spWScale" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spWScale"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_alignBottom="@+id/etWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:text="Please enter your wrist circumference"
        android:textStyle="bold"
        android:textSize="38px"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/etWeight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:id="@+id/editText7" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_alignBottom="@+id/editText7"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/spWScale" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/btSubmit"
        android:layout_below="@+id/editText7"
        android:layout_alignEnd="@+id/tvGender" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="textNoSuggestions|textPersonName"
        android:text="Basic Survey"
        android:textStyle="bold"
        android:ems="10"
        android:id="@+id/heading"
        android:elevation="1dp"
        android:textAlignment="center"
        android:minWidth="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rGender"
        android:layout_below="@+id/tvGender"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male                    "
            android:textSize="35px"
            android:id="@+id/rbMale" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female   "
            android:textSize="35px"
            android:id="@+id/rbFemale" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_below="@+id/tvHeight"
        android:layout_alignParentStart="true"
        android:id="@+id/editText8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeight"
        android:text="Please enter your height"
        android:textStyle="bold"
        android:textSize="38px"
        android:layout_marginTop="32dp"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/rGender"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tvGender"
        android:text="Gender"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
